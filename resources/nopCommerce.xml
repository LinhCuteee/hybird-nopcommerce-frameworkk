<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Nopcommerce Automation Test">

    <listeners>
        <listener class-name="commons.MethodListener"/>
    </listeners>

    <parameter name="userUrl" value="https://demo.nopcommerce.com/"></parameter>
    <parameter name="adminUrl" value="https://admin-demo.nopcommerce.com/"></parameter>


    <test name="Run on Chrome browser" preserve-order="true">
        <parameter name="browser" value="CHROME"></parameter>
        <classes>
            <class name="com.nopcommerce.common.Login"></class>
            <class name="com.nopcommerce.users.Level_20_Share_State_Close_Browser" />
        </classes>
    </test>

